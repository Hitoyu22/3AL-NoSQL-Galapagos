# Les Queries pour récupérer les boîtes

extend type Query {
    # Récupérer les boîtes - au moins un paramètre recommandé
    boxes(
        id: ID
        orderId: ID
        clientId: ID
        status: BoxStatus
    ): [Box]
}

# La structure d'une boîte
type Box {
    id: ID!
    orderId: ID!
    clientId: ID!
    number: Int!
    status: BoxStatus!
    content: String!
}

enum BoxStatus {
    DELIVERED
    IN_TRANSIT
    PENDING
}